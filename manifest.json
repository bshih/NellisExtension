{
  "manifest_version": 3,
  "name": "Nellis Auction Helper",
  "version": "1.0.0",
  "description": "Filter items and generate Amazon links on Nellis Auction",

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://www.nellisauction.com/*",
    "https://nellisauction.com/*"
  ],

  "background": {
    "service_worker": "dist/service-worker.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    },
    "default_title": "Nellis Auction Helper"
  },

  "content_scripts": [
    {
      "matches": ["https://www.nellisauction.com/*", "https://nellisauction.com/*"],
      "js": ["dist/content.js"],
      "css": ["dist/content.css"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  }
}
